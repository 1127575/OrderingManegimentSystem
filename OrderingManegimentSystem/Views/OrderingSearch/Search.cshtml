@model OrderingManegimentSystem.Models.OrderDetail
@{
    ViewBag.Title = "Search";
}

<style>
    h2 {
        text-align: center
    }

    p {
        text-align: center
    }

    table{
        margin: 0 auto
    }
</style>

<body>
    <h2>受注情報検索</h2>
    <p>受注情報を検索します。</p>
    <p>検索条件を入力して、「検索」ボタンを押してください。</p>

    <form action="OrderingSearch/Searchresult">
        <table>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CustomerId)</th>
                <td><input type="number" name="customerId" style="width:184px"></td><!--文字列の最大長はバリデーションで指定可能-->
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OrderNo) </th>
                <td><input type="number" name="orderNo" style="width:184px"></td><!--文字列の最大長はバリデーションで指定可能-->
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.DeliveryDate)</th>
                <td>
                    <input type="date" name="deliveryFrom">～<input type="date" name="deliveryTo">
                </td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                <td>
                    <input type="date" name="orderFrom">～<input type="date" name="orderTo">
                </td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <td>
                    <select name="status">
                        <option>未出荷</option>
                        <option>出荷済</option>
                        <option>入荷待ち</option>
                        <option>キャンセル</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td><input type="submit" class="btn btn-primary" value="検索"></td>
            </tr>
        </table>
    </form>
</body>
